---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Tää ei oo viimeinen Hector?">
	<main>
		<h1>This is <span class="text-gradient">Hector</span></h1>
		<div class="hero-image-container"><img src="/images/eagle-proud.png" alt="Hector loves you" /></div>
		<ul role="list" class="link-card-grid">
			<Card
				href="/events"
				title="Events"
				body="Follow as the world's best amateur golfers face off in Hector events worldwide."
			/>
			<Card
				href="/players"
				title="Players"
				body="Get to know the world's best amateur golfers."
			/>
			<Card
				href="/courses"
				title="Courses"
				body="See where the world's best amateur golfers play."
			/>
			<Card
				href="/golfreport"
				title="Golf Report"
				body="Read past issues of golf's leading magazine."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		text-transform: uppercase;
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 0.7em;
	}

	.hero-image-container {
		width: 100%;
		text-align: center;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
