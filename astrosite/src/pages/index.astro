---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Highlight from '../components/Highlight.astro';
---

<Layout title="Tää ei oo viimeinen Hector?">
	<main>
		<h1>This is <span class="text-gradient">Hector</span></h1>
		<Highlight>
			<p>
				To get started, open the directory <code>src/pages</code> in your project.<br />
				<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
			</p>
		</Highlight>
		<ul role="list" class="link-card-grid">
			<Card
				href="/golfreport"
				title="Golf Report - Past Issues"
				body="Read past issues of golf's leading magazine."
			/>
			<Card
				href="/events"
				title="Events"
				body="Follow as the world's best amateur golfers face off in Hector events worldwide."
			/>
			<Card
				href="/players"
				title="Players"
				body="Get to know the world's best amateur golfers"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	main h1 {
		text-transform: uppercase;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
