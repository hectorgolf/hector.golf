---
import Layout from '../../layouts/Layout.astro';
import CourseCard from '../../components/courses/CourseCard.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import data from '../../data/courses.json';

function linkToCourse(course: any) {
    return `/courses/${course.id}`;
}

---
<Layout title="Courses">
    <main>
		<div class="breadcrumbs">
			<Breadcrumb title="Home" href="/" />
		</div>
        <h1>Courses</h1>
        <ul role="list" class="link-card-grid">
            {data.map((course) => {
                return <CourseCard name={course.name} image={course.hero_image} location={course.contact.address} href={linkToCourse(course)}/>
            })}
        </ul>
    </main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		text-transform: uppercase;
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
