<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}

	body {
		padding-bottom: 80px;
		margin: 0;
		background: #red;
	}

	main {
		color: white;
	}

	h1 {
		text-transform: uppercase;
		margin-top: 40px;
	}

	a {
		color: #ffffff;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.header-bar {
		height: 50px;
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		justify-items: center;
	}

	.home-link img {
		height: calc(90%);
	}

	.breadcrumbs {
		position:absolute;
	}

	.breadcrumbs a {
        color: white;
        font-size: 0.8em;
        text-decoration: none;
        margin-left: 5px;
    }

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	@media only screen and (max-width: 500px) {
        main {
            font-size: 16px;
            padding: 0.5rem;
        }

        h1 {
		    font-size: 2.5rem;
        }
    }

	@media only screen and (min-width: 501px) {
        main {
            font-size: 20px;
            padding: 1rem;
        }

        h1 {
		    font-size: 4rem;
        }
    }

</style>
