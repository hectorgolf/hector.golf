---
interface Props {
	title: string;
	href: string;
	date: string;
	location: string;
	image?: string;
}

const { title, image, href, date, location } = Astro.props;
---

<li class="link-event">
	<a href={href}>
		{image ? <img src={image} title={title}/><br/> : ""}
		<div class="title"><span class="text-gradient">{title}</span></div>
		<div class="location">{location}</div>
		<div class="date">{date}</div>
	</a>
</li>

<style>
	.link-event {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-event:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-event:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}

	.link-event > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.link-event img {
		max-width: calc(100% - 0rem);
		border-radius: 2px;
	}
	.link-event .title {
		font-weight: 700;
		color: white;
	}
	.link-event .location {
		font-size: 0.75em;
	}
	.link-event .date {
		margin-top: 10px;
		font-size: 0.75em;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-event:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-event:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
