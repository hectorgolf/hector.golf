---
interface Props {
	name: string;
	href: string;
	location: string;
	image?: string;
}

const { name, image, href, location } = Astro.props;
---

<li class="link-course">
	<a href={href}>
		{image ? <img src={image} title={name}/><br/> : ""}
		<span class="title">{name}</span>
		<span class="location">{location}</span>
	</a>
</li>

<style>
	.link-course {
		list-style: none;
		display: flex;
		padding: 1px;
		max-width: 600px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-course > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.link-course img {
		max-width: calc(100% - 0rem);
		max-height: 200px;
		border-radius: 2px;
	}
	.link-course .title {
		display: block;
		font-size: 1.25rem;
	}
	.link-course .location {
		display: block;
		font-size: 0.85rem;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-course:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-course:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
