---
interface Props {
	title: string;
	image: string;
	href: string;
}

const { title, image, href } = Astro.props;
---

<li class="link-issuecover">
	<a href={href}><img src={image} title={title}/></a>
</li>
<style>
	.link-issuecover {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-issuecover > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	.link-issuecover img {
		max-width: calc(100% - 0rem);
		border-radius: 2px;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-issuecover:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-issuecover:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
